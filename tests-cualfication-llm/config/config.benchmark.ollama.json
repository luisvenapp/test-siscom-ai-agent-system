{
  "iterations": 10,
  "concurrency": 1,
  "within_agent_concurrency": 2,
  "agent_execution": "sequential",
  "timeout_seconds": 120,
  "log_dir": "logs",
  "reports_dir": "reports",
  "scenarios_dir": "scenarios",
  "agents": [
    {
      "name": "ollama_llama3_8b",
      "type": "ollama",
      "base_url": "http://localhost:11434",
      "model": "llama3:8b",
      "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}
    },
    {
      "name": "ollama_phi3",
      "type": "ollama",
      "base_url": "http://localhost:11434",
      "model": "phi3:latest",
      "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}
    },
    {
      "name": "ollama_qwen2_7b",
      "type": "ollama",
      "base_url": "http://localhost:11434",
      "model": "qwen2:7b",
      "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}
    }
  ],
  "rubrics": {
    "weights": {
      "exactitud": 0.35,
      "completitud": 0.2,
      "relevancia": 0.2,
      "claridad": 0.15,
      "formato": 0.1,
      "penalizacion_tiempo": -0.05
    },
    "thresholds": {"aprobado": 0.7, "excelente": 0.9}
  }
}
