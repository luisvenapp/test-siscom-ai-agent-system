{
  "iterations": 5,
  "concurrency": 1,
  "timeout_seconds": 60,
  "log_dir": "logs",
  "reports_dir": "reports",
  "scenarios_dir": "scenarios",
  "agents": [
    {
      "name": "backend_http_completion",
      "type": "http",
      "base_url": "http://host.docker.internal:8001/v1/test-completion",
      "parameters": {"temperature": 0.2}
    }
  ],
  "rubrics": {
    "weights": {
      "exactitud": 0.35,
      "completitud": 0.2,
      "relevancia": 0.2,
      "claridad": 0.15,
      "formato": 0.1,
      "penalizacion_tiempo": -0.05
    },
    "thresholds": {"aprobado": 0.7, "excelente": 0.9}
  }
}
