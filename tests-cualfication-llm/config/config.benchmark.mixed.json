{
  "iterations": 10,
  "concurrency": 1,
  "within_agent_concurrency": 1,
  "agent_execution": "sequential",
  "timeout_seconds": 120,
  "max_model_fail_retries": 2,
  "log_dir": "logs",
  "reports_dir": "reports",
  "scenarios_dir": "scenarios",
  "agents": [
    {"name": "openai_gpt_4_1",      "type": "openai", "model": "gpt-4.1",      "parameters": {"temperature": 0.2}},
    {"name": "openai_gpt_4_1_mini", "type": "openai", "model": "gpt-4.1-mini", "parameters": {"temperature": 0.2}},
    {"name": "openai_gpt_4o",       "type": "openai", "model": "gpt-4o",       "parameters": {"temperature": 0.2}},
    {"name": "openai_gpt_4o_mini",  "type": "openai", "model": "gpt-4o-mini",  "parameters": {"temperature": 0.2}},

    {"name": "gemini_25_flash", "type": "gemini", "model": "gemini-2.5-flash", "parameters": {"temperature": 0.2, "top_p": 0.95}},
    {"name": "gemini_25_pro",   "type": "gemini", "model": "gemini-2.5-pro",   "parameters": {"temperature": 0.2, "top_p": 0.95}},
    {"name": "gemini_20_flash", "type": "gemini", "model": "gemini-2.0-flash", "parameters": {"temperature": 0.2, "top_p": 0.95}},
    {"name": "gemini_20_pro",   "type": "gemini", "model": "gemini-2.0-pro",   "parameters": {"temperature": 0.2, "top_p": 0.95}},

    {"name": "deepseek_chat",     "type": "deepseek", "model": "deepseek-chat",     "parameters": {"temperature": 0.2}},
    {"name": "deepseek_reasoner", "type": "deepseek", "model": "deepseek-reasoner", "parameters": {"temperature": 0.2}},

    {"name": "ollama_gemma3_base",   "type": "ollama", "base_url": "http://localhost:11434", "model": "gemma3",       "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},
    {"name": "ollama_gemma3_12b",   "type": "ollama", "base_url": "http://localhost:11434", "model": "gemma3:12b",  "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},
    {"name": "ollama_gemma3_27b",   "type": "ollama", "base_url": "http://localhost:11434", "model": "gemma3:27b",  "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},

    {"name": "ollama_devstral_24b", "type": "ollama", "base_url": "http://localhost:11434", "model": "devstral:24b",  "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},
    {"name": "ollama_devstral_latest","type": "ollama", "base_url": "http://localhost:11434", "model": "devstral:latest", "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},

    {"name": "ollama_mixtral_8x7b", "type": "ollama", "base_url": "http://localhost:11434", "model": "mixtral:8x7b",  "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},
    {"name": "ollama_mixtral_8x22b","type": "ollama", "base_url": "http://localhost:11434", "model": "mixtral:8x22b", "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},

    {"name": "ollama_gpt_oss_20b",  "type": "ollama", "base_url": "http://localhost:11434", "model": "gpt-oss:20b",  "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},

    {"name": "ollama_qwen3_8b",     "type": "ollama", "base_url": "http://localhost:11434", "model": "qwen3:8b",     "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},
    {"name": "ollama_qwen3_14b",    "type": "ollama", "base_url": "http://localhost:11434", "model": "qwen3:14b",    "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},
    {"name": "ollama_qwen3_32b",    "type": "ollama", "base_url": "http://localhost:11434", "model": "qwen3:32b",    "parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}},

    {"name": "ollama_phi4_mini_3_8b","type": "ollama", "base_url": "http://localhost:11434", "model": "phi4-mini:3.8b","parameters": {"temperature": 0.2, "top_p": 0.9, "num_predict": 512}}
  ],

  "rubrics": {
    "weights": {
      "exactitud": 0.35,
      "completitud": 0.2,
      "relevancia": 0.2,
      "claridad": 0.15,
      "formato": 0.1,
      "penalizacion_tiempo": -0.05
    },
    "thresholds": {"aprobado": 0.7, "excelente": 0.9}
  }
}
