{
  "iterations": 5,
  "concurrency": 1,
  "within_agent_concurrency": 1,
  "agent_execution": "sequential",
  "timeout_seconds": 120,
  "max_model_fail_retries": 2,
  "log_dir": "logs",
  "reports_dir": "reports",
  "scenarios_dir": "scenarios",
  "agents": [
    {
      "name": "openai_gpt_4_1",
      "type": "openai",
      "model": "gpt-4.1",
      "parameters": { "temperature": 0.2 }
    },
    {
      "name": "openai_gpt_4_1_mini",
      "type": "openai",
      "model": "gpt-4.1-mini",
      "parameters": { "temperature": 0.2 }
    },
    {
      "name": "openai_gpt_4o",
      "type": "openai",
      "model": "gpt-4o",
      "parameters": { "temperature": 0.2 }
    },
    {
      "name": "openai_gpt_4o_mini",
      "type": "openai",
      "model": "gpt-4o-mini",
      "parameters": { "temperature": 0.2 }
    },

    {
      "name": "gemini_25_flash",
      "type": "gemini",
      "model": "gemini-2.5-flash",
      "parameters": { "temperature": 0.2, "top_p": 0.95 }
    },
    {
      "name": "gemini_25_pro",
      "type": "gemini",
      "model": "gemini-2.5-pro",
      "parameters": { "temperature": 0.2, "top_p": 0.95 }
    },
    {
      "name": "gemini_20_flash",
      "type": "gemini",
      "model": "gemini-2.0-flash",
      "parameters": { "temperature": 0.2, "top_p": 0.95 }
    },
    {
      "name": "gemini_20_pro",
      "type": "gemini",
      "model": "gemini-2.0-pro",
      "parameters": { "temperature": 0.2, "top_p": 0.95 }
    },

    {
      "name": "deepseek_chat",
      "type": "deepseek",
      "model": "deepseek-chat",
      "parameters": { "temperature": 0.2 }
    },
    {
      "name": "deepseek_reasoner",
      "type": "deepseek",
      "model": "deepseek-reasoner",
      "parameters": { "temperature": 0.2 }
    }
  ],

  "rubrics": {
    "weights": {
      "exactitud": 0.35,
      "completitud": 0.2,
      "relevancia": 0.2,
      "claridad": 0.15,
      "formato": 0.1,
      "penalizacion_tiempo": -0.05
    },
    "thresholds": { "aprobado": 0.7, "excelente": 0.9 }
  }
}
